@using MudBlazor

<MudCard Elevation="2">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Atmospheric Status</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>"@Atmosphere"</MudText>
        <MudText>GEOGRAPHY: @Geography</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public string Atmosphere { get; set; } = string.Empty;
    [Parameter] public string Geography { get; set; } = string.Empty;
}